{
  "name": "@stablemaster/checks",
  "version": "1.0.4",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md"
  ],
  "dependencies": {
    "ts-interface-checker": "^0.1.11",
    "glob": "^7.1.6",
    "glob-promise": "^3.4.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.2",
    "@types/jest": "^25.2.1",
    "@types/prettyjson": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "joi": "^14.3.1",
    "microbundle": "^0.12.2",
    "prettier": "^2.0.4",
    "prettyjson": "^1.2.1",
    "ts-interface-builder": "^0.2.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "generateTypeChecks": "ts-interface-builder src/types/check.ts",
    "prestart": "yarn generateTypeChecks",
    "prebuild": "yarn generateTypeChecks",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write \"src/**/!(*.spec).ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stable-master/checks"
  },
  "keywords": [
    "stablemaster",
    "checks"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "generators/app/templates"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "author": "stablemaster",
  "bugs": {
    "url": "https://github.com/stable-master/checks/issues"
  },
  "homepage": "https://github.com/stable-master/checks#readme"
}
